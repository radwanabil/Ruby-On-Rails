<style>
    h1 {
        color: #333;
        font-size: 24px;
        margin-bottom: 20px;
    }

    .table {
        margin: 20px auto;
        width: 100%;
        border-collapse: collapse;
    }

    th,
    td {
        padding: 10px;
        text-align: left;
        border-bottom: 1px solid #ccc;
    }

    th {
        background-color: #f2f2f2;
        font-weight: bold;
    }

    .btn {
        display: inline-block;
        padding: 6px 12px;
        font-size: 14px;
        font-weight: bold;
        text-align: center;
        text-decoration: none;
        white-space: nowrap;
        cursor: pointer;
        border: none;
        border-radius: 4px;
        color: #fff;
    }

    .btn-primary {
        background-color: #007bff;
    }

    .btn-success {
        background-color: #28a745;
    }

    .btn-danger {
        background-color: #dc3545;
    }
</style>

<h1>Books</h1>
<%= link_to "Create New Book", new_book_path, class: "btn btn-primary" %>
<table class="table">
    <thead>
        <tr>
        <th scope="col">Name</th>
        <th scope="col">Image</th>
        <th scope="col">Price</th>
        <th scope="col">Created At</th>
        <th>Updated At</th>
        <th>Action</th>
        <th>Created By</th>
        </tr>
    </thead>

    <tbody>
        <% @books.each do |book| %>
        <tr>
            <td><%= book.name %></td>
            <td><%= book.image %></td>
            <td><%= book.price %></td>
            <td><%= book.created_at %></td>
            <td><%= book.updated_at %></td>
            <td><%= book.user.name %></td>
            <td>
                <a href="<%= book_path(book) %>" class="btn btn-primary">Show</a>
                <a href="<%= edit_book_path(book) %>" class="btn btn-success">Update</a>
                <a class="btn btn-danger"
                <%= link_to "Delete", book_path(book), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                    } %> 
                </a>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>
